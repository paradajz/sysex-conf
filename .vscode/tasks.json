{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Test] Build single test",
            "command": "cd tests && make pre-build TARGETNAME=${input:protocolVariant} && make TESTS=${input:testName} TARGETNAME=${input:protocolVariant} && cp $(../scripts/test_dir_get.sh ${input:protocolVariant} ${input:testName})/${input:testName}.out build/test.out",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[Test] Build all tests",
            "command": "cd tests && make pre-build && make",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[Test] Clean",
            "command": "cd tests && make clean",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "[Tests] Run compiled",
            "command": "cd tests && make exec",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Select test to compile",
            "default": "all",
            "type": "pickString",
            "options": [
                "all"
            ]
        },
        {
            "id": "protocolVariant",
            "description": "Select protocol variant:",
            "default": "sysexconf1b",
            "type": "pickString",
            "options": [
                "sysexconf1b",
                "sysexconf2b"
            ]
        }
    ]
}